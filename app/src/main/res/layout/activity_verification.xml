<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg_gradient"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.twenty.four.crafts.registration.Verification"
    android:screenOrientation="portrait">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginLeft="-30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bubble"
        android:paddingRight="40dp"
        android:paddingLeft="50dp"
        android:paddingTop="19dp"
        android:text="Verification"
        android:textSize="20dp"/>

        <LinearLayout
            android:id="@+id/phone_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

           android:elevation="8dp"
            android:paddingLeft="40dp"
            android:paddingRight="30dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:background="#ffffff">

            <ImageView
                android:layout_width="55dp"
                android:layout_height="50dp"
                android:clickable="true"
                android:id="@+id/phone"
                android:src="@drawable/phone2"
                android:layout_gravity="center_vertical"
                />



            <LinearLayout
                android:id="@+id/phonelayout"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:paddingLeft="16dp"
                android:weightSum="2"
                android:gravity="center">

                <TextView
                    android:layout_width="100dp"
                    android:text="Phone"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:layout_height="0dp"
                    android:layout_weight="1.25"/>

                <TextView

                    android:layout_height="0dp"
                    android:layout_weight="0.75"
                    android:layout_width="100dp"
                    android:id="@+id/phone_text_veri"
                    android:text="Verified !"
                    android:textColor="#ff99cc00"/>

            </LinearLayout>

        </LinearLayout>


    <LinearLayout
        android:id="@+id/fb_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

       android:elevation="8dp"
        android:paddingLeft="40dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:background="#ffffff">

        <ImageView
            android:layout_width="55dp"
            android:layout_height="53dp"
            android:id="@+id/fb"
            android:src="@drawable/facebook_black"
            android:clickable="true"
            android:layout_gravity="center_vertical" />

        <LinearLayout

            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:weightSum="2"
            android:gravity="center">

            <TextView
                android:layout_width="100dp"
                android:text="Facebook"
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_height="0dp"
                android:layout_weight="1.25"/>

            <TextView

                android:layout_height="0dp"
                android:layout_weight="0.75"
                android:layout_width="100dp"
                android:id="@+id/fb_text_veri"
                android:text="Not verified !"
                android:textColor="#ff4e4e"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/google_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

       android:elevation="8dp"
        android:paddingLeft="40dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:background="#ffffff">

        <ImageView
            android:layout_width="55dp"
            android:id="@+id/google"
            android:layout_height="50dp"
            android:src="@drawable/googleg_disabled_color_18"
            android:padding="10dp"
            android:background="@drawable/circle_filled"
            android:clickable="true"
            android:layout_gravity="center_vertical"
            />


        <LinearLayout

            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:weightSum="2"
            android:gravity="center">

            <TextView
                android:layout_width="100dp"
                android:text="Google"
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_height="0dp"
                android:layout_weight="1.25"/>

            <TextView

                android:layout_height="0dp"
                android:layout_weight="0.75"
                android:layout_width="100dp"
                android:id="@+id/google_text_veri"
                android:text="Not verified !"
                android:textColor="#ff4e4e"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/insta_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

       android:elevation="5dp"
        android:paddingLeft="40dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:background="#ffffff">

        <ImageView
            android:layout_width="55dp"
            android:layout_height="50dp"
            android:clickable="true"
            android:src="@drawable/insta_black"
            android:id="@+id/insta"
            android:layout_gravity="center_vertical"
            />

        <LinearLayout

            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:weightSum="2"
            android:gravity="center">

            <TextView
                android:layout_width="100dp"
                android:text="Instagram"
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_height="0dp"
                android:layout_weight="1.25"/>

            <TextView

                android:layout_height="0dp"
                android:layout_weight="0.75"
                android:layout_width="100dp"
                android:id="@+id/insta_text_veri"
                android:text="Not verified !"
                android:textColor="#ff4e4e"/>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/twitter_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:elevation="5dp"
        android:paddingLeft="40dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:background="#ffffff">

        <ImageView
            android:layout_width="55dp"
            android:layout_height="50dp"
            android:clickable="true"
            android:src="@drawable/twitter_black"
            android:id="@+id/twitter"
            android:layout_gravity="center_vertical"
            />

        <LinearLayout

            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:weightSum="2"
            android:gravity="center">

            <TextView
                android:layout_width="100dp"
                android:text="Twitter"
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_height="0dp"
                android:layout_weight="1.25"/>

            <TextView

                android:layout_height="0dp"
                android:layout_weight="0.75"
                android:layout_width="100dp"
                android:id="@+id/twitter_text_veri"
                android:text="Not verified !"
                android:textColor="#ff4e4e"/>

        </LinearLayout>
    </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/verification_skip"
        android:text="Skip"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#004e92"
        android:elevation="8dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffffff" />


    <Button
        android:id="@+id/verification_done"
        android:text="Finish"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#004e92"
        android:elevation="8dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffffff" />


</RelativeLayout>
