<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/animation_background"
    tools:context="com.twenty.four.crafts.app_startup.Login2"
    android:focusable="true"
    android:id="@+id/parentLayout"
    android:fitsSystemWindows="true"
    android:focusableInTouchMode="true"
    android:screenOrientation="portrait">


    <RelativeLayout
        android:id="@+id/rel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/bubble"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="280sp"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:inputType="textEmailAddress"
        android:hint="Email"
        android:paddingLeft="20sp" />


        <android.support.design.widget.TextInputLayout
            android:id="@+id/etPasswordLayout"
            android:layout_below="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="false"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="30sp"
            app:passwordToggleEnabled="true">

    <android.support.design.widget.TextInputEditText
        android:id="@+id/password"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/bubble"
        android:paddingRight="10dp"
        android:hint="Password"
        android:paddingLeft="20sp"
        />

        </android.support.design.widget.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:clickable="true"
        android:text="Forgot Password?"
        android:textColor="#ffffff"
        android:id="@+id/forgot_password"
        android:layout_below="@+id/etPasswordLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp" />

        <Button
            android:id="@+id/btnClients"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:layout_below="@+id/forgot_password"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_round"
            android:gravity="center"
            android:text="LOGIN CLIENTS"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/btnCraftsmen"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:layout_alignLeft="@+id/btnClients"
            android:layout_alignStart="@+id/btnClients"
            android:layout_below="@+id/btnClients"
            android:layout_marginTop="13dp"
            android:background="@drawable/button_round"
            android:gravity="center"
            android:text="LOGIN CRAFTSMEN"
            android:textColor="#ffffff" />

    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pushnotif"
        android:layout_alignParentTop="true"
        android:text="notif"/>

</RelativeLayout>


