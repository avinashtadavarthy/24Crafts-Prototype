<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:background="#50000000"
    android:orientation="vertical"
    android:weightSum="4"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="3.25"
        android:orientation="horizontal"
        android:weightSum="2">

        <ImageView
            android:id="@+id/nav_pic"
            android:layout_width="0sp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:padding="25sp"
            app:srcCompat="@mipmap/ic_launcher_round" />


        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/nav_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:text="Name"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:layout_marginTop="20sp"/>

            <TextView
                android:id="@+id/nav_craft"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nav_name"
                android:text="Craft"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:layout_marginBottom="20sp"/>

            <ImageButton
                android:id="@+id/profile_edits"
                android:layout_width="44dp"
                android:layout_height="43dp"
                android:background="#00ffffff"
                android:padding="10sp"
                android:src="@drawable/edit_white" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.75"
        android:weightSum="3"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/aud_handy"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/aud_handy"
            android:scaleType="fitCenter"
            android:layout_margin="5sp"/>

        <ImageView
            android:id="@+id/fav_handy"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/fav_handy"
            android:scaleType="fitCenter"
            android:layout_margin="5sp"/>

        <ImageView
            android:id="@+id/inbox_handy"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/inbox_handy"
            android:scaleType="fitCenter"
            android:layout_margin="5sp"/>

    </LinearLayout>

</LinearLayout>
