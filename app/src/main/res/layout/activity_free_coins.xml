<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:background="#ffffff"
    tools:context="com.twenty.four.crafts.FreeCoins">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/rateusimage"
        android:src="@drawable/logo"
        android:layout_marginBottom="15dp"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:text="24 Crafts"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginBottom="30dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rateusimage"
        android:id="@+id/logotext"/>
    
    <LinearLayout
        android:id="@+id/layout1"
        android:onClick="rateUs"
        android:layout_below="@id/logotext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="22dp"
            android:layout_weight="1"
            android:src="@drawable/ic_rateus" />

        <TextView
            android:textColor="#000000"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:text="Rate Us"
            android:layout_weight="1.5"/>

        <TextView
            android:textColor="#000000"
            android:text="+5 coins"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1.5"/>
    </LinearLayout>

    <LinearLayout
        android:onClick="referAndEarn"
        android:id="@+id/layout2"
        android:layout_marginTop="20dp"
        android:layout_below="@id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/icon_referandearn"
            android:layout_width="0dp"
            android:layout_height="22dp"
            android:layout_weight="1"/>

        <TextView
            android:textColor="#000000"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:text="Refer and Earn"
            android:layout_weight="1.5"/>

        <TextView
            android:textColor="#000000"
            android:text="+5 coins"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1.5"/>
    </LinearLayout>
</RelativeLayout>
