<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    tools:context="com.twenty.four.crafts.PurchaseCoins">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:id="@+id/RelativeLayout1"
        android:background="#40ffffff"
        android:padding="25dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/Image1"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:src="@drawable/taigamod2" />

        <TextView
            android:id="@+id/Textview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="left"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/Image1"
            android:text="Ragav"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Graphic Designer"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/Image1"
            android:layout_below="@id/Textview1"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/RelativeLayout1"
        android:id="@+id/RelativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:paddingLeft="100dp"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="18dp"
                android:text="Current Coins : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="250"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/coins1"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="15dp"
        android:id="@+id/RelativeLayout3"
        android:layout_below="@id/RelativeLayout2"
        android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_1"
        android:padding="10dp"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="2dp"
        app:cardElevation="8dp"
        app:cardPreventCornerOverlap="false"
        app:contentPadding="0dp">

        <RelativeLayout
            android:layout_width="130dp"
            android:layout_height="100dp">
        <ImageView
            android:layout_centerHorizontal="true"
            android:src="@drawable/coins1"
            android:id="@+id/RelativeLayout3Image1"
            android:layout_marginTop="5dp"
            android:layout_width="70dp"
            android:layout_height="70dp" />
        <TextView
            android:layout_below="@id/RelativeLayout3Image1"
            android:id="@+id/FrameLayout1Text1"
            android:layout_width="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="50 Coins - ₹ 9"
            android:layout_height="wrap_content" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>








        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_2"
            android:padding="10dp"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/card_view_1"
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:layout_margin="16dp"
            app:cardCornerRadius="2dp"
            app:cardElevation="8dp"
            app:cardPreventCornerOverlap="false"
            app:contentPadding="0dp">

            <RelativeLayout
                android:layout_width="130dp"
                android:layout_height="100dp">
                <ImageView
                    android:src="@drawable/coins2"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/RelativeLayout3Image2"
                    android:layout_marginTop="5dp"
                    android:layout_width="70dp"
                    android:layout_height="70dp" />
                <TextView
                    android:layout_below="@id/RelativeLayout3Image2"
                    android:id="@+id/FrameLayout1Text2"
                    android:layout_width="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:text="125 Coins - ₹ 19"
                    android:layout_height="wrap_content" />

            </RelativeLayout>


        </android.support.v7.widget.CardView>













        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_3"
            android:padding="10dp"
            android:layout_below="@id/card_view_1"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:layout_margin="16dp"
            app:cardCornerRadius="2dp"
            app:cardElevation="8dp"
            app:cardPreventCornerOverlap="false"
            app:contentPadding="0dp">

            <RelativeLayout
                android:layout_width="130dp"
                android:layout_height="100dp">
                <ImageView
                    android:src="@drawable/coins3"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/RelativeLayout3Image3"
                    android:layout_marginTop="5dp"
                    android:layout_width="70dp"
                    android:layout_height="70dp" />
                <TextView
                    android:layout_below="@id/RelativeLayout3Image3"
                    android:id="@+id/FrameLayout1Text3"
                    android:layout_width="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:text="350 Coins - ₹ 49"
                    android:layout_height="wrap_content" />

            </RelativeLayout>


        </android.support.v7.widget.CardView>








        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_4"
            android:padding="10dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:layout_margin="16dp"
            app:cardCornerRadius="2dp"
            app:cardElevation="8dp"
            app:cardPreventCornerOverlap="false"
            app:contentPadding="0dp">

            <RelativeLayout
                android:layout_width="130dp"
                android:layout_height="100dp">
                <ImageView
                    android:src="@drawable/coins4"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/RelativeLayout3Image4"
                    android:layout_marginTop="5dp"
                    android:layout_width="70dp"
                    android:layout_height="70dp" />
                <TextView
                    android:layout_below="@id/RelativeLayout3Image4"
                    android:id="@+id/FrameLayout1Text4"
                    android:layout_width="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:text="900 Coins - ₹ 99"
                    android:layout_height="wrap_content" />

            </RelativeLayout>


        </android.support.v7.widget.CardView>





















    </RelativeLayout>

</RelativeLayout>
