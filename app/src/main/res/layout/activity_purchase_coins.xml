<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="com.twenty.four.crafts.PurchaseCoins">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/RelativeLayout1"
        android:background="@drawable/rounded_white_corners"
        android:layout_margin="25dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/Image1"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:elevation="10dp"
            android:src="@drawable/taigamod2" />

        <TextView
            android:id="@+id/divider"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/Image1"
            android:layout_centerInParent="true"
            android:background="#40404040"
            android:layout_margin="20dp"/>

        <LinearLayout
            android:layout_toRightOf="@id/divider"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/usersname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="left"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="22sp"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/divider"
                android:text="Ragav"/>

            <TextView
                android:id="@+id/craft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Graphic Designer"
                android:textColor="#000000"
                android:textSize="13sp"
                android:textStyle="italic"/>

        </LinearLayout>

    </RelativeLayout>

        <LinearLayout
            android:id="@+id/linearlayoutt"
            android:layout_below="@id/RelativeLayout1"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/rounded_white_corners"
            android:gravity="center"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="20sp"
                android:text="current coins   "
                android:layout_margin="5dp"
                android:fontFamily="sans-serif-smallcaps"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/coincount"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="250"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/single_coin"/>

        </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/RelativeLayout3"
        android:layout_margin="28dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/linearlayoutt"
        android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_1"
        android:layout_width="120dp"
        android:layout_height="100dp"
        app:cardCornerRadius="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        app:cardBackgroundColor="#ffffff"
        app:cardElevation="8dp"
        app:cardPreventCornerOverlap="false"
        app:contentPadding="0dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
            android:id="@+id/RelativeLayout3Image1"
            android:src="@drawable/coins1"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/FrameLayout1Text1"
            android:text="50 Coins - ₹ 9"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:textColor="#000000"
            android:background="#40808080"
            android:layout_height="wrap_content" />

        </LinearLayout>


    </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_2"
            android:layout_width="120dp"
            android:layout_height="100dp"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="#ffffff"
            app:cardElevation="8dp"
            android:layout_toRightOf="@+id/card_view_1"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            app:cardPreventCornerOverlap="false"
            app:contentPadding="0dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/coins2"
                    android:id="@+id/RelativeLayout3Image2"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginBottom="5dp"/>

                <TextView
                    android:text="125 Coins - ₹ 19"
                    android:id="@+id/FrameLayout1Text2"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:background="#40808080"
                    android:layout_height="wrap_content"  />

            </LinearLayout>


        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_3"
            android:layout_width="120dp"
            android:layout_height="100dp"
            app:cardCornerRadius="5dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/card_view_1"
            app:cardBackgroundColor="#ffffff"
            app:cardElevation="8dp"
            app:cardPreventCornerOverlap="false"
            app:contentPadding="0dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/coins3"
                    android:id="@+id/RelativeLayout3Image3"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginBottom="5dp"/>
                <TextView
                    android:id="@+id/FrameLayout1Text3"
                    android:text="350 Coins - ₹ 49"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:background="#40808080"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>


        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_4"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_below="@id/card_view_2"
            android:layout_toRightOf="@id/card_view_3"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="#ffffff"
            app:cardElevation="8dp"
            app:cardPreventCornerOverlap="false"
            app:contentPadding="0dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/coins4"
                    android:id="@+id/RelativeLayout3Image4"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginBottom="5dp"/>

                <TextView
                    android:id="@+id/FrameLayout1Text4"
                    android:text="900 Coins - ₹ 99"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:background="#40808080"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </android.support.v7.widget.CardView>


    </RelativeLayout>

</RelativeLayout>
