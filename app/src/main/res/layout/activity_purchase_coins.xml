<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/blur"
    tools:context="com.twenty.four.crafts.PurchaseCoins">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:id="@+id/RelativeLayout1"
        android:background="#40ffffff"
        android:padding="25dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/Image1"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:src="@drawable/taigamod2" />

        <TextView
            android:id="@+id/Textview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="left"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/Image1"
            android:text="Ragav"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Graphic Designer"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/Image1"
            android:layout_below="@id/Textview1"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/RelativeLayout1"
        android:id="@+id/RelativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:paddingLeft="100dp"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="18sp"
                android:text="Current Coins : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="250"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/coins1"/>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_below="@id/RelativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginBottom="10dp"
        android:id="@+id/LinearLayout1"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <RelativeLayout
        android:paddingTop="20dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@drawable/rectangularborder"
        android:id="@+id/RelativeLayout3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/coins1"/>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_below="@id/img1"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="50 Coins - ₹ 9"/>
    </RelativeLayout>

        <RelativeLayout
            android:background="@drawable/rectangularborder"
            android:paddingTop="20dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:id="@+id/RelativeLayout5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/RelativeLayout3"
            android:layout_alignEnd="@+id/RelativeLayout3"
            android:layout_marginLeft="17dp"
            android:layout_marginStart="17dp">

            <ImageView
                android:id="@+id/img3"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/coins3"/>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_below="@id/img3"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="350 Coins - ₹ 49"/>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:layout_toRightOf="@id/LinearLayout1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/RelativeLayout2"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/RelativeLayout4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginEnd="17dp"
            android:layout_marginRight="17dp"
            android:layout_weight="1"
            android:background="@drawable/rectangularborder"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="20dp">

            <ImageView
                android:id="@+id/img2"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/coins2" />

            <TextView
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/img2"
                android:layout_marginTop="5dp"
                android:text="125 Coins - ₹ 19 " />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/RelativeLayout6"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignEnd="@+id/RelativeLayout4"
            android:layout_alignRight="@+id/RelativeLayout4"
            android:layout_alignTop="@+id/RelativeLayout5"
            android:layout_marginEnd="17dp"
            android:layout_marginRight="17dp"
            android:layout_weight="1"
            android:background="@drawable/rectangularborder"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="20dp">

            <ImageView
                android:id="@+id/img4"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/coins4" />

            <TextView
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/img4"
                android:layout_marginTop="5dp"
                android:textSize="12dp"
                android:text="900 Coins - ₹ 99" />
        </RelativeLayout>

    </LinearLayout>


    </LinearLayout>
</RelativeLayout>
