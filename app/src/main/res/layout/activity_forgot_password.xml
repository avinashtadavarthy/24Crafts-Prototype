<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/forgotPasswordParentLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@drawable/animation_background"
    tools:context="com.twenty.four.crafts.ForgotPassword">


    <EditText
        android:background="@drawable/bubble"
        android:hint="Enter your registered Email id"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingLeft="32sp"
        android:id="@+id/forgot_password_edittext"
        android:layout_centerInParent="true"/>

    <Button
        android:background="@drawable/button_round"
        android:id="@+id/forgot_password_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="SUBMIT"
        android:layout_below="@id/forgot_password_edittext"
        android:layout_marginTop="40dp"/>
</RelativeLayout>
