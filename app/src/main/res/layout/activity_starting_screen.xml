<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/blur"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context="com.example.iyashwant.spiderprojectprototype.registration.StartingScreen">

    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Who are you?"
            android:textColor="#e2e2e2"
            android:layout_marginTop="150dp"
            android:textSize="20sp"
            android:gravity="center"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:paddingBottom="40dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:padding="10dp"
            android:layout_marginTop="30dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_centerHorizontal="true"
                android:id="@+id/craftsman_reg"
                android:background="?android:attr/selectableItemBackground"
                android:tint="#ffffff"
                android:src="@drawable/ic_person"
                android:layout_width="100dp"
                android:layout_height="70dp"/>


            <TextView
                android:layout_width="100dp"
                android:text="Craftsmen"
                android:gravity="center"
                android:textColor="#ffffff"
                android:layout_height="wrap_content"
                android:layout_below="@+id/craftsman_reg"/>

        </RelativeLayout>

        <RelativeLayout
            android:padding="10dp"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_movie"
                android:id="@+id/client_reg"
                android:tint="#ffffff"
                android:layout_width="100dp"
                android:background="?android:attr/selectableItemBackground"

                android:layout_height="70dp"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="100dp"
                android:text="Client"
                android:gravity="center"
                android:textColor="#ffffff"
                android:layout_below="@+id/client_reg"/>

        </RelativeLayout>


    </RelativeLayout>






</LinearLayout>
