<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#616161"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context="com.example.iyashwant.spiderprojectprototype.StartingScreen">

    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgview"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:src="@drawable/icon_twentyfour"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose Your Category"
            android:textColor="#FFFFFF"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_below="@id/imgview"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:paddingBottom="40dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:padding="10dp"
            android:background="#795548"
            android:layout_marginTop="30dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_centerHorizontal="true"
                android:id="@+id/craftsmen"
                android:onClick="regcraftsmen"
                android:src="@drawable/ic_person"
                android:layout_width="40dp"
                android:layout_height="40dp"/>


            <TextView
                android:layout_width="100dp"
                android:text="Craftsmen"
                android:gravity="center"
                android:textColor="#FFC107"
                android:layout_height="wrap_content"
                android:layout_below="@id/craftsmen"/>

        </RelativeLayout>

        <RelativeLayout
            android:padding="10dp"
            android:background="#1B5E20"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_movie"
                android:id="@+id/client"
                android:onClick="regclient"
                android:layout_width="40dp"
                android:layout_height="40dp"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="100dp"
                android:text="Client"
                android:gravity="center"
                android:textColor="#FFC107"
                android:layout_below="@id/client"/>

        </RelativeLayout>


    </RelativeLayout>






</LinearLayout>
