<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context="com.twenty.four.crafts.registration.StartingScreen">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Who are you?"
            android:textColor="#e2e2e2"
            android:layout_marginTop="150dp"
            android:textSize="20dp"
            android:gravity="center" />


    <RelativeLayout
        android:id="@+id/container"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:paddingBottom="40dp"
        android:layout_height="350dp">

        <RelativeLayout
            android:id="@+id/craftsContainer"
            android:padding="10dp"
            android:layout_marginTop="30dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <ImageView
                android:layout_centerHorizontal="true"
                android:id="@+id/craftsman_reg"
                android:background="?android:attr/selectableItemBackground"
                android:tint="#ffffff"
                android:src="@drawable/ic_person"
                android:layout_width="100dp"
                android:layout_height="70dp"/>


            <TextView
                android:layout_width="100dp"
                android:text="Craftsmen"
                android:gravity="center"
                android:textColor="#ffffff"
                android:layout_height="wrap_content"
                android:layout_below="@+id/craftsman_reg"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/clientsContainer"
            android:padding="10dp"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <ImageView
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_movie"
                android:id="@+id/client_reg"
                android:tint="#ffffff"
                android:layout_width="100dp"
                android:background="?android:attr/selectableItemBackground"

                android:layout_height="70dp"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="100dp"
                android:text="Client"
                android:gravity="center"
                android:textColor="#ffffff"
                android:layout_below="@+id/client_reg"/>

        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>
