<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/client_verify"
    tools:context="com.twenty.four.crafts.ClientVerification5Activity">



    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/cross"
        android:layout_below="@+id/cross"
        android:layout_marginTop="10dp"
        android:text="Please Check Your ID"
        android:textColor="@android:color/white"
        android:textSize="35sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/cross"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/back"
        android:tint="@android:color/white"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:background="@null"
        />

    <Button
        android:id="@+id/ContinueButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="15dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:text="Continue"
        android:drawableRight="@drawable/right_arrow"
        android:drawablePadding="5dp"
        android:drawableTint="#0ca795"
        android:textColor="#0ca795"
        android:background="@drawable/client_verification_button"/>
    <Button
        android:id="@+id/DetailButton"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:tint="#0ca795"
        android:background="@drawable/border1"
        android:layout_marginBottom="18dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:text="Retake Photo"
        android:textSize="15sp"
        android:textColor="#ffff"/>


    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="320dp"
        android:layout_height="820dp"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="-180dp"
        app:srcCompat="@drawable/phone_mockup000" />

</RelativeLayout>
