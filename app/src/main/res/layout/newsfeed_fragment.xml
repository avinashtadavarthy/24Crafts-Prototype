<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <HorizontalScrollView
        android:id="@+id/choose_news"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">

                <Button
                    android:id="@+id/bn1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_box"
                    android:padding="5dp"
                    android:text="The Hindu (Tamil)"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textSize="12sp" />

            <Button
                android:id="@+id/bn2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/button_box"
                android:padding="5dp"
                android:text="BBC (Tamil)"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="12sp" />

                <Button
                    android:id="@+id/bn3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_box"
                    android:padding="5dp"
                    android:text="Zee News (Tamil)"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/bn4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_box"
                    android:padding="5dp"
                    android:text="Filmy Beat (Tamil)"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textSize="12sp" />

            <Button
                android:id="@+id/bn5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/button_box"
                android:padding="5dp"
                android:text="One India (Tamil)"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="12sp" />

            <Button
                android:id="@+id/bn6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/button_box"
                android:padding="5dp"
                android:text="Dinamalar (Tamil)"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="12sp" />

            <Button
                android:id="@+id/bn7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/button_box"
                android:padding="5dp"
                android:text="Dinakaran (Tamil)"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="12sp" />

        </LinearLayout>

    </HorizontalScrollView>

    <FrameLayout
        android:id="@+id/content_frame_newsfeed"
        android:layout_below="@id/choose_news"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:paddingRight="10sp"
        android:paddingLeft="10sp"/>

</RelativeLayout>