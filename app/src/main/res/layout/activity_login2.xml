<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    tools:context="com.twenty.four.crafts.app_startup.Login2"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:screenOrientation="portrait">

    <ImageView
        android:id="@+id/openinggif"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/splashlogo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"/>

    <LinearLayout
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
        android:id="@+id/fb_login_button"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/round_card"
        android:layout_margin="5dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/facebook" />

            <Button
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:text="Login with Facebook"
                android:textColor="#000000"
                android:onClick="fbLogin"
                android:textAllCaps="false"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:background="@drawable/round_card"
                style="?android:attr/borderlessButtonStyle"/>

    </LinearLayout>

        <com.google.android.gms.common.SignInButton
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
        android:id="@+id/gl_login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/round_card"
        android:layout_margin="5dp" >

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/google_icon"
            android:background="@drawable/circle_filled"
            android:padding="10dp"/>

            <Button
                android:id="@+id/bn_login"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:text="Login with Google"
                android:textColor="#000000"
                android:textAllCaps="false"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:background="@drawable/round_card"
                style="?android:attr/borderlessButtonStyle"/>

        <TextView
            android:visibility="gone"
            android:text="Login with Google"
            android:textColor="#000000"
            android:layout_width="183dp"
            android:fontFamily="sans-serif-condensed"
            android:layout_height="40dp"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackground"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/instagram_login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/round_card"
            android:layout_margin="5dp" >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/instagram_icon"
                android:padding="2dp"/>

            <Button
                android:id="@+id/login_for_instagram"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:text="Login with Instagram"
                android:textColor="#000000"
                android:textAllCaps="false"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:background="@drawable/round_card"
                style="?android:attr/borderlessButtonStyle"/>

            <TextView
                android:visibility="gone"
                android:text="Login with Instagram"
                android:textColor="#000000"
                android:layout_width="180dp"
                android:fontFamily="sans-serif-condensed"
                android:layout_height="40dp"
                android:gravity="center"
                android:background="?android:attr/selectableItemBackground"/>

        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="50dp"
                android:background="#ffffff"
                android:layout_height="1dp"
                android:layout_marginRight="5dp"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/otherlogins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="other login methods"
                android:textColor="#ffffff"
                android:fontFamily="sans-serif-smallcaps"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="50dp"
                android:background="#ffffff"
                android:layout_height="1dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="40dp">

            <LinearLayout
                android:id="@+id/sign_up_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/signup_iconz"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:padding="5dp"
                    android:src="@drawable/signup_icon"
                    android:layout_marginRight="50dp"
                    android:background="?android:attr/selectableItemBackground" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sign Up"
                    android:textColor="#ffffff"
                    android:fontFamily="sans-serif-condensed"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/login_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/login_iconz"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:padding="5dp"
                    android:src="@drawable/login_icon"
                    android:background="?android:attr/selectableItemBackground" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Login"
                    android:textColor="#ffffff"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center_horizontal"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
