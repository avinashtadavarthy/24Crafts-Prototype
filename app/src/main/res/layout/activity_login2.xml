<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    tools:context="com.twenty.four.crafts.app_startup.Login2"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:screenOrientation="portrait">

    <VideoView
        android:id="@+id/videoView"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>

    <LinearLayout
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:padding="10sp"
        android:layout_marginBottom="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:id="@+id/fb_login_button"
        android:layout_width="220sp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/round_card"
        android:layout_margin="5sp" >

        <ImageView
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:src="@drawable/facebook" />

        <TextView
            android:text="Login with Facebook"
            android:textColor="#000000"
            android:layout_width="180sp"
            android:layout_height="40sp"
            android:gravity="center"
            android:background="@drawable/round_card"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/gl_login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/round_card"
        android:layout_margin="5sp" >

        <ImageView
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:src="@drawable/google_icon"
            android:background="@drawable/circle_filled"
            android:padding="10sp"/>

        <TextView
            android:text="Login with Google"
            android:textColor="#000000"
            android:layout_width="183sp"
            android:layout_height="40sp"
            android:gravity="center"
            android:background="@drawable/round_card"/>

    </LinearLayout>

        <LinearLayout
            android:id="@+id/instagram_login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/round_card"
            android:layout_margin="5sp" >

            <ImageView
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:src="@drawable/instagram_icon"
                android:padding="2sp"/>

            <TextView
                android:text="Login with Instagram"
                android:textColor="#000000"
                android:layout_width="180sp"
                android:layout_height="40sp"
                android:gravity="center"
                android:background="@drawable/round_card"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="50sp"
                android:background="#ffffff"
                android:layout_height="1sp"
                android:layout_marginRight="5sp"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/otherlogins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="other login methods"
                android:textColor="#ffffff"
                android:fontFamily="sans-serif-smallcaps"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="50sp"
                android:background="#ffffff"
                android:layout_height="1sp"
                android:layout_marginLeft="5sp"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/sign_up_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/signup_iconz"
                    android:layout_width="45sp"
                    android:layout_height="45sp"
                    android:padding="5sp"
                    android:src="@drawable/signup_icon"
                    android:layout_marginRight="50sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sign Up"
                    android:textColor="#ffffff"
                    android:fontFamily="sans-serif-condensed"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/login_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/login_iconz"
                    android:layout_width="45sp"
                    android:layout_height="45sp"
                    android:padding="5sp"
                    android:src="@drawable/login_icon"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Login"
                    android:textColor="#ffffff"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center_horizontal"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <com.github.clans.fab.FloatingActionMenu
        android:visibility="gone"
        android:id="@+id/material_design_android_floating_action_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="10sp"
        fab:menu_animationDelayPerItem="55"
        fab:menu_backgroundColor="@android:color/transparent"
        fab:menu_buttonSpacing="0dp"
        fab:menu_colorNormal="#ffffff"
        fab:menu_colorPressed="#ff004e"
        fab:menu_colorRipple="#99d4d4d4"
        fab:menu_fab_size="normal"
        fab:menu_icon="@drawable/fab_btn_plus"
        fab:menu_labels_colorNormal="#3a464646"
        fab:menu_labels_colorPressed="#21434343"
        fab:menu_labels_colorRipple="#66efecec"
        fab:menu_labels_cornerRadius="3dp"
        fab:menu_labels_ellipsize="none"
        fab:menu_labels_hideAnimation="@anim/fab_slide_out_to_right"
        fab:menu_labels_margin="0dp"
        fab:menu_labels_maxLines="-1"
        fab:menu_labels_padding="8dp"
        fab:menu_labels_position="left"
        fab:menu_labels_showAnimation="@anim/fab_slide_in_from_right"
        fab:menu_labels_showShadow="true"
        fab:menu_labels_singleLine="false"
        fab:menu_labels_textColor="#f2f1f1"
        fab:menu_labels_textSize="13sp"
        fab:menu_openDirection="up"
        fab:menu_shadowColor="#661d1e1d"
        fab:menu_shadowRadius="4dp"
        fab:menu_shadowXOffset="1dp"
        fab:menu_shadowYOffset="4dp"
        fab:menu_showShadow="true">



        <com.github.clans.fab.FloatingActionButton

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_email"
            fab:menu_colorNormal="#ffffff"
            fab:menu_colorPressed="#ff004e"
            fab:menu_colorRipple="#99d4d4d4"
            fab:fab_label="Login with Email"
            fab:fab_size="normal" />


        <com.github.clans.fab.FloatingActionButton

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_sign"
            fab:menu_colorNormal="#ffffff"
            fab:menu_colorPressed="#ff004e"
            fab:menu_colorRipple="#99d4d4d4"
            fab:fab_label="Sign Up with Email"
            fab:fab_size="normal" />

    </com.github.clans.fab.FloatingActionMenu>


