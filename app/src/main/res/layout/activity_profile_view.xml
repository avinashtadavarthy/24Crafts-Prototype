<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/wall"
    android:padding="10sp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentTop="true"
                android:id="@+id/MainLayout"
                android:weightSum="10">

                <RelativeLayout
                    android:layout_width="0sp"
                    android:layout_weight="6.5"
                    android:layout_marginRight="10sp"
                    android:layout_height="220sp"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/MainImage"
                        android:layout_width="240sp"
                        android:layout_height="240sp"
                        android:scaleType="centerCrop"/>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@color/blur_grey"
                        android:id="@+id/Starred"
                        android:src="@drawable/star"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"/>

                    <ImageView
                        android:padding="2sp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/Sigil"
                        android:src="@drawable/sigil"
                        android:background="@color/blur_grey"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"/>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_weight="3.5"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/SideImage1"
                        android:scaleType="centerCrop"
                        android:layout_width="match_parent"

                        android:layout_height="110dp"
                        android:layout_marginBottom="5sp"/>


                    <ImageView
                        android:scaleType="centerCrop"
                        android:id="@+id/SideImage2"
                        android:layout_width="match_parent"

                        android:layout_height="110dp"/>

                </LinearLayout>

            </LinearLayout>


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:id="@+id/BottomImagesLayout"
                android:layout_below="@id/MainLayout">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <!--<ImageView
                        android:layout_width="30sp"
                        android:layout_height="match_parent"
                        android:src="@drawable/arrow_back"/>-->

                    <ImageView

                        android:id="@+id/BottomImage1"
                        android:layout_width="110sp"
                        android:layout_height="match_parent"
                        android:layout_margin="5sp"
                        android:scaleType="centerCrop"/>

                    <ImageView

                        android:id="@+id/BottomImage2"
                        android:layout_width="110sp"
                        android:layout_height="match_parent"
                        android:layout_margin="5sp"
                        android:scaleType="centerCrop"/>

                    <ImageView

                        android:id="@+id/BottomImage3"
                        android:layout_width="110sp"
                        android:layout_height="match_parent"
                        android:layout_margin="5sp"
                        android:scaleType="centerCrop"/>

                    <ImageView

                        android:id="@+id/BottomImage4"
                        android:layout_width="110sp"
                        android:layout_height="match_parent"
                        android:layout_margin="5sp"
                        android:scaleType="centerCrop"/>

                    <Button
                        android:layout_width="100sp"
                        android:id="@+id/BuyMoreButton"
                        android:layout_height="match_parent"
                        android:text="BUY MORE"
                        android:background="#60000000"
                        android:layout_gravity="center"
                        android:layout_margin="5sp"
                        android:scaleType="centerCrop"/>

                </LinearLayout>

            </HorizontalScrollView>


            <RelativeLayout
                android:layout_width="130sp"
                android:layout_height="150sp"
                android:layout_margin="10dp"
                android:layout_below="@id/BottomImagesLayout">

                <VideoView
                    android:id="@+id/Video"
                    android:layout_width="130dp"
                    android:layout_height="150dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="INSERT VIDEO FOR PROFILE HERE"/>

            </RelativeLayout>

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/BottomImagesLayout"
                android:layout_alignParentRight="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Anisha Jain"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:paddingTop="3sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Female - Model"
                        android:textSize="15sp"
                        android:paddingTop="3sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Height: 165 cm"
                        android:textSize="15sp"
                        android:paddingTop="3sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Weight: 58 kgs"
                        android:textSize="15sp"
                        android:paddingTop="3sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Body Type: Athletic"
                        android:textSize="15sp"
                        android:paddingTop="3sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chest Size: 35 inches"
                        android:textSize="15sp"
                        android:paddingTop="3sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dance: Bharatanaytam"
                        android:textSize="15sp"
                        android:paddingTop="3sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hair Color: Black"
                        android:textSize="15sp"
                        android:paddingTop="3sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Home Town: Chennai"
                        android:textSize="15sp"
                        android:paddingTop="3sp"/>

                </LinearLayout>

            </ScrollView>




        </RelativeLayout>

    </ScrollView>


</RelativeLayout>
