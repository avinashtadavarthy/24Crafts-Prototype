<?xml version="1.0" encoding="utf-8"?>

<resources>
    <declare-styleable name="ShimmerRecyclerView">
        <attr name="shimmer_demo_layout" format="reference" />
        <attr name="shimmer_demo_child_count" format="integer|reference" />
        <attr name="shimmer_demo_layout_manager_type" format="enum">
            <enum name="linear_vertical" value="0" />
            <enum name="linear_horizontal" value="1" />
            <enum name="grid" value="2" />
        </attr>
        <attr name="shimmer_demo_grid_child_count" format="integer|reference" />
        <attr name="shimmer_demo_shimmer_color" format="color|reference" />
        <attr name="shimmer_demo_angle" format="integer|reference" />
        <attr name="shimmer_demo_view_holder_item_background" format="color|reference" />
        <attr name="shimmer_demo_duration" format="integer|reference" />

    </declare-styleable>

    <declare-styleable name="FoldingCell">
        <attr name="backSideColor" format="color" />
        <attr name="animationDuration" format="integer" />
        <attr name="additionalFlipsCount" format="integer" />
        <attr name="cameraHeight" format="integer" />
    </declare-styleable>


    <declare-styleable name="LuckyWheel">

        <attr name="background_color" format="color"/>
        <attr name="arrow_image" format="reference"/>

    </declare-styleable>

    <declare-styleable name="MyTextView">
        <attr name="font" format="reference" />
    </declare-styleable>

    <declare-styleable name="LuckyWheelView">
        <attr name="lkwBackgroundColor" format="color" />
        <attr name="lkwCursor" format="reference" />
        <attr name="lkwCenterImage" format="reference" />
        <attr name="lkwTextColor" format="color" />
    </declare-styleable>

    <declare-styleable name="GarlandView">
        <attr name="itemStart" format="dimension"/>
        <attr name="itemGap" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="daynnight">
        <attr name="dayNnightBg" format="color" />
        <attr name="dayNnightCard" format="color" />
        <attr name="dayNnightText" format="color" />
        <attr name="dayNnightTint" format="color" />
        <attr name="dayNnightBtn" format="color" />
        <attr name="letters" format="color" />
    </declare-styleable>

</resources>